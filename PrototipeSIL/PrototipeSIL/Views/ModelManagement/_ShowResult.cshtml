@model PrototipeSIL.Models.RekomendasiSuplaiModel

@{
    AjaxOptions options = new AjaxOptions
    {
        HttpMethod = "post",
        UpdateTargetId = "ResultBox",
        InsertionMode = InsertionMode.Replace
    };

    AjaxOptions optionDSS = new AjaxOptions
    {
        HttpMethod = "post",
        UpdateTargetId = "ResultBox",
        InsertionMode = InsertionMode.Replace
    };
}

<div class="box-header well" data-original-title="">
    <h2><i class="glyphicon glyphicon-question-sign"></i> Simulasi Perhitungan Model </h2>
</div>
<div class="box-content alert" style="padding:20px;">
    @using (Ajax.BeginForm("ShowResultDSS", "ModelManagement", optionDSS))
    {
        <div class="form-group">
            <div class="row">
                <label class="col-md-3"><b>Anggaran</b> </label>
                <div class="col-md-6">
                    <input type="number" value="@Model.anggaranInput" class="form-control" name="anggaran" id="anggaran">
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-md-3"><b>Model Keputusan</b> </label>
                <div class="col-md-6">
                    <div class="dropdown">
                        <select class="btn btn-default dropdown-toggle" name="option" id="option">
                            <option value="EOQ">Model EOQ</option>
                            <option value="SMH">Model SMH</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-default col-md-8">Submit</button>
                </div>
            </div>
        </div>
    }
    <br />
</div>

<div class="box-header well" data-original-title="">
    <h2><i class="glyphicon glyphicon-question-sign"></i> Rekomendasi </h2>

    <div class="box-icon">
        <a href="#" class="btn btn-setting btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
        <a href="#" class="btn btn-minimize btn-round btn-default">
            <i class="glyphicon glyphicon-chevron-up"></i>
        </a>
        <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
    </div>
</div>
<div class="box-content" style="padding:20px;">
    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
        <thead>
            <tr>
                <th>Kode Barang</th>
                <th>Nama Barang</th>
                <th>Jumlah Pasok</th>
                <th>Nama Supplier</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.item)
            {
                <tr>
                    <td>@item.KodeBarang</td>
                    <td>@item.NamaBarang</td>
                    <td>@item.JumlahPasok</td>
                    <td>@item.NamaSupplier</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}

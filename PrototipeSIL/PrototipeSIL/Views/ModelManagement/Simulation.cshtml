@{
    ViewBag.Title = "Simulation";
}

@{
    AjaxOptions options = new AjaxOptions
    {
        HttpMethod = "post",
        UpdateTargetId = "QuestionBox",
        InsertionMode = InsertionMode.Replace
    };

    AjaxOptions optionDSS = new AjaxOptions
    {
        HttpMethod = "post",
        UpdateTargetId = "ResultBox",
        InsertionMode = InsertionMode.Replace
    };
}

<div id="ResultBox">
    <div class="box-header well" data-original-title="">
        <h2><i class="glyphicon glyphicon-question-sign"></i> Simulasi Perhitungan Model </h2>
    </div>
    <div class="box-content alert" style="padding:20px;">
        @using (Ajax.BeginForm("ShowResultDSS", "ModelManagement", optionDSS))
        {
            <div class="form-group">
                <div class="row">
                    <label class="col-md-3"><b>Anggaran</b> </label>
                    <div class="col-md-6">
                        <input type="number" class="form-control" name="anggaran" id="anggaran">
                    </div>
                    <div class="col-md-3"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-md-3"><b>Model Keputusan</b> </label>
                    <div class="col-md-6">
                        <div class="dropdown">
                            <select class="btn btn-default dropdown-toggle" name="option" id="option">
                                <option value="EOQ">Model EOQ</option>
                                <option value="SMH">Model SMH</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-default col-md-8">Submit</button>
                    </div>
                </div>
            </div>
        }
        <br />
    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}
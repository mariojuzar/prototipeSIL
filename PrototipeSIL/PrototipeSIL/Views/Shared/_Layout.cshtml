<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Supermarket Supply Support System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default" role="navigation">
        <div class="navbar-inner">
            <button type="button" class="navbar-toggle pull-left animated flip">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Application", "Index", "Dashboard", new { area = "" }, new { @class = "navbar-brand" })

            <!-- user dropdown starts -->
            <div class="btn-group pull-right">
                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <i class="glyphicon glyphicon-user"></i><span class="hidden-sm hidden-xs"> @(ViewContext.HttpContext.Session["Name"])</span>
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="~/Login/Logout">Logout</a></li>
                </ul>
            </div>
            <!-- user dropdown ends -->
            
            <ul class="collapse navbar-collapse nav navbar-nav top-menu">
                <li>
                    <form class="navbar-search pull-left">
                        <input placeholder="Search" class="search-query form-control col-md-10" name="query"
                               type="text">
                    </form>
                </li>
            </ul>
        </div>
    </div>
    <div class="ch-container">
        <div class="row">
            <div class="col-sm-2 col-lg-2">
                <div class="sidebar-nav">
                    <div class="nav-canvas">
                        <div class="nav-sm nav nav-stacked">
                        </div>
                        <ul class="nav nav-pills nav-stacked main-menu">
                            <li class="nav-header">Main</li>
                            <li class="@( ViewContext.RouteData.Values["controller"].ToString().Equals("Dashboard") ? "active" : "" )">
                                <a class="ajax-link" href="~/Dashboard"><i class="glyphicon glyphicon-home"></i><span> Dashboard</span></a>
                            </li>
                            <li class="@( ViewContext.RouteData.Values["controller"].ToString().Equals("Consultation") ? "active" : "" )">
                                <a class="ajax-link" href="~/Consultation"><i class="glyphicon glyphicon-font"></i><span> Konsultasi</span></a>
                            </li>
                            <li class="accordion @( ViewContext.RouteData.Values["controller"].ToString().Equals("ModelManagement") ? "active" : "" )">
                                <a class="ajax-link" href="~/ModelManagement"><i class="glyphicon glyphicon-book"></i><span> Model Management</span></a>
                                <ul class="nav nav-pills nav-stacked">
                                    <li class="@( ViewContext.RouteData.Values["controller"].ToString().Equals("Consultation") ? "active" : "")">
                                        <a href="/ModelManagement">Model Saya</a>
                                    </li>
                                    <li class="@( (ViewContext.RouteData.Values["controller"].ToString().Equals("Consultation") && ViewContext.RouteData.Values["action"].ToString().Equals("Simulation")) ? "active" : "")">
                                        <a href="/ModelManagement/Simulation">Simulasi</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="@( ViewContext.RouteData.Values["controller"].ToString().Equals("Stock") ? "active" : "" )">
                                <a class="ajax-link" href="~/Stock"><i class="glyphicon glyphicon-th-large"></i><span> Stok Barang</span></a>
                            </li>
                            <li class="@( ViewContext.RouteData.Values["controller"].ToString().Equals("Supplier") ? "active" : "" )">
                                <a class="ajax-link" href="~/Supplier"><i class="glyphicon glyphicon-list-alt"></i><span> Supplier</span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div id="content" class="col-sm-10 col-md-10">
                    @RenderBody()
                 <hr />
                 <footer>
                    <p>&copy; @DateTime.Now.Year - Supermarket Supply Support System</p>
                 </footer>
            </div>
        </div>
    </div>
        
        

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
